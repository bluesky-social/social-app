{
  "lexicon": 1,
  "id": "tools.ozone.set.querySets",
  "defs": {
    "main": {
      "type": "query",
      "description": "Query available sets",
      "parameters": {
        "type": "params",
        "properties": {
          "limit": {
            "type": "integer",
            "minimum": 1,
            "maximum": 100,
            "default": 50
          },
          "cursor": {
            "type": "string"
          },
          "namePrefix": {
            "type": "string"
          },
          "sortBy": {
            "type": "string",
            "enum": ["name", "createdAt", "updatedAt"],
            "default": "name"
          },
          "sortDirection": {
            "type": "string",
            "default": "asc",
            "enum": ["asc", "desc"],
            "description": "Defaults to ascending order of name field."
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["sets"],
          "properties": {
            "sets": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "tools.ozone.set.defs#setView"
              }
            },
            "cursor": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
