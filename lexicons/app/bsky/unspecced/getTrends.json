{
  "lexicon": 1,
  "id": "app.bsky.unspecced.getTrends",
  "defs": {
    "main": {
      "type": "query",
      "description": "Get the current trends on the network",
      "parameters": {
        "type": "params",
        "properties": {
          "limit": {
            "type": "integer",
            "minimum": 1,
            "maximum": 25,
            "default": 10
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["trends"],
          "properties": {
            "trends": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "app.bsky.unspecced.defs#trendView"
              }
            }
          }
        }
      }
    }
  }
}
