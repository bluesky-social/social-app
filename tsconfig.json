{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "esnext",
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "#/*": ["./src/*"],
      "lib/*": ["./src/lib/*"],
      "platform/*": ["./src/platform/*"],
      "state/*": ["./src/state/*"],
      "view/*": ["./src/view/*"],
      "crypto": ["./src/platform/crypto.ts"],
      "multiformats": ["node_modules/multiformats/types/src/index.d.ts"]
    }
  },
  "exclude": ["bskyweb", "bskyembed", "web-build"]
}
